      <iframe 
        allowTransparency="true"
        id="footer"
        class="vertical"
        src="/examples/footer" 
        title="Footer Example">
      </iframe>
    </TabItem> -->
    <!-- TabItem label="Nested">
      <iframe 
        id="nested"
        class="vertical"
        src="/examples/nested" 
        title="Nested Example">
      </iframe>
    </TabItem -->
  </Tabs>

</StarlightPage>

<JS/>
