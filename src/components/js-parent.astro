<script src="/js/iframe-resizer.parent.js" is:inline></script>

<script>
  const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent)

  const tolerance = isSafari ? 2 : 0

  const bodyBackground = getComputedStyle(document.body).backgroundColor

  window.iframeResize({ log: true, license: 'GPLv3', bodyBackground, direction: 'horizontal', tolerance }, '#horizontal');
  window.iframeResize({ log: true, license: 'GPLv3', bodyBackground, offsetSize: -2 }, '.vertical');
</script>
