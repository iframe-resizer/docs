<span id="stars" class="-ml-2"></span>
<script>
  function formatNumber(number, decPlaces) {
  if (!number) return window.localStorage.getItem("stars") || undefined;

  decPlaces = Math.pow(10, decPlaces)

  const abbrev = ["K", "M", "B", "T"];

  for (let i = abbrev.length - 1; i >= 0; i--) {
    var size = Math.pow(10, (i + 1) * 3);

    if (size <= number) {
      number = Math.round((number * decPlaces) / size) / decPlaces;

      if (number == 1000 && i < abbrev.length - 1) {
        number = 1;
        i++;
      }

      number += abbrev[i];

      break;
    }
  }

  if (number) {
    window.localStorage.setItem("stars", number);
  }

  return number;
}

let stars = fetch(
      "https://api.github.com/repos/davidjbradshaw/iframe-resizer"
    )
      .then((response) => response.json())
      .then((data) => formatNumber(data.stargazers_count, 1))
      .then((stars) => document.getElementById("stars").innerText = stars)
</script>
